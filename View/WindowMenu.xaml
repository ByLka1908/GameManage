<Window x:Class="GamesManager.View.WindowMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GamesManager.View"
        mc:Ignorable="d"
        Title="Меню" MinHeight="300" MinWidth="500" MaxHeight="500" MaxWidth="800"
        FontFamily="Verdana" SizeToContent="WidthAndHeight">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" HorizontalAlignment="Left">
            <Button Background="{StaticResource br2}" Padding="5" Margin="5" x:Name="btExist" Click="btExist_Click">Назад</Button>
        </StackPanel>

        <StackPanel Grid.Column="1">
            <Button x:Name="btGames" Background="{StaticResource br2}" Padding="5" Margin="5" Click="btGames_Click">Все твои игры</Button>
        </StackPanel>
    </Grid>
</Window>
